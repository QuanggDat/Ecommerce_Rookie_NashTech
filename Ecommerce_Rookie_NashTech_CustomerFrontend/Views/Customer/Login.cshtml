@model ViewModels.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4 text-center">Login</h1>
		<form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="row justify-content-center">
				<div class="col-md-7">
					<div class="form-group mb-3">
						<label asp-for="@Model.emailOrPhoneNumber" class="form-label">Email or Phone Number</label><sup>*</sup>
						<input asp-for="@Model.emailOrPhoneNumber" class="form-control">
						<span asp-validation-for="@Model.emailOrPhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-7">
					<div class="form-group mb-3">
						<label asp-for="@Model.password" class="form-label">Password</label><sup>*</sup>
						<input asp-for="@Model.password" type="password" class="form-control">
						<span asp-validation-for="@Model.password" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-7 text-center pt-4">
					<button type="submit" class="btn btn-primary py-3 px-4 text-uppercase w-100">Login</button>
					<div class="mt-3">
						<a asp-controller="KhachHang" asp-action="QuenMatKhau" class="text-secondary">Forgot password?</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
